# =========================================
# AI Solopreneur Bot - Environment Variables
# === CRITICAL: Change LLM_PROVIDER to 'openai' below ===
# =========================================

# ===== Twitter API Credentials =====
TWITTER_API_KEY=your_key_here
TWITTER_API_SECRET=your_secret_here
TWITTER_ACCESS_TOKEN=your_token_here
TWITTER_ACCESS_SECRET=your_secret_here
TWITTER_BEARER_TOKEN=your_bearer_here

# ===== OpenAI API =====
OPENAI_API_KEY=your_openai_key_here

# ===== Gumroad API =====
GUMROAD_ACCESS_TOKEN=your_gumroad_token

# ===== Database =====
DATABASE_PATH=data/solopreneur.db

# ===== LLM Configuration =====
# CRITICAL: Set to 'openai' to use OpenAI for high-quality content
# Set to 'ollama' only if you have Ollama running locally
# Set to 'auto' to use OpenAI if available, Dummy otherwise
LLM_PROVIDER=openai

# Only needed if using Ollama (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# LLM Behavior
LLM_MAX_RETRIES=3
CIRCUIT_TTL_SECONDS=600
USE_DUMMY_LLM=false

# ===== Content Settings =====
MAX_TWEETS_PER_DAY=5
POSTING_TIMES=09:00,14:00,18:00

# ===== Analytics =====
ANALYTICS_LOOKBACK_DAYS=30
